@page
@model LoginModel

@{
    ViewData["Title"] = "Account";
}
<partial name="_BreadcrumbsPartial" />
@* <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" /> *@
<main class="main-content" id="MainContent" role="main" tabindex="-1">
    <div class="page-width contents">
        <div class="main-container medium-up--three-quarters without-sidebar-main-container">
            <div class="customer login">
                <h1 id="login" tabindex="-1">
                    Login
                </h1>
                <div>
                    <form method="post">
                        <input type="hidden" name="form_type" value="customer_login"><input type="hidden" name="utf8" value="✓">
                        <div class="field">
                            <input asp-for="Input.Email" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="field">
                            <input asp-for="Input.Password" autocomplete="current-password" aria-required="true" placeholder="password" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <a asp-page="./ForgotPassword">
                            Forgot your password?
                        </a>
                        <button>
                            Sign in
                        </button>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                            Create account
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
