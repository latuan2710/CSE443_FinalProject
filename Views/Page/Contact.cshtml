@model Contact

@{
    ViewData["Title"] = "Contact";
}
<partial name="_BreadcrumbsPartial" />
<main class="main-content" id="MainContent" role="main" tabindex="-1">
    <div class="page-width contents">
        <div class="main-container medium-up--three-quarters without-sidebar-main-container">
            <section id="shopify-section-template--16631469277477__form" class="shopify-section contact">
                <link href="//cafebrew-codezeel.myshopify.com/cdn/shop/t/2/assets/section-contact-form.css?v=43845065617916424321666350171" rel="stylesheet" type="text/css" media="all">
                <div class="page-width contact-page">
                    <div class="contact-us">
                        <div class="contact-us-form">
                            <div>
                                <h2 class="Contact-title title">
                                    Contact
                                </h2>
                                <form method="post" asp-controller="Contacts" asp-action="Create" class="contact-form">
                                    <div class="contact__fields">
                                        <div class="field field--with-error">
                                            <input class="field__input" asp-for="Name" placeholder="Name">
                                            <label class="field__label" asp-for="Name">Name</label>
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                        <div class="field field--with-error">
                                            <input asp-for="Email" class="field__input" placeholder="Email">
                                            <label class="field__label" asp-for="Email">Email <span aria-hidden="true">*</span></label>
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="field field--with-error">
                                        <input asp-for="Phone" class="field__input" placeholder="Phone number">
                                        <label class="field__label" asp-for="Phone">Phone number</label>
                                        <span asp-validation-for="Phone" class="text-danger"></span>
                                    </div>
                                    <div class="field field--with-error">
                                        <textarea rows="10" asp-for="Message" class="text-area field__input" placeholder="Comment"></textarea>
                                        <label class="form__label field__label" asp-for="Message">Comment</label>
                                        <span asp-validation-for="Message" class="text-danger"></span>
                                    </div>
                                    <div class="contact__button">
                                        <button type="submit" class="button">
                                            Send
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="site-footer__address">
                            <h2 class="contact-info title">Get in Touch With Us</h2>
                            <div class="contact-des">
                            </div>

                            <div class="address_content info">
                                <i aria-hidden="true" class="fa fa-home"></i><span>33 New Montgomery St. Ste 750 San Francisco, CA, USA 94105</span>
                            </div>

                            <div class="contact_content info">
                                <i aria-hidden="true" class="fa fa-phone"></i><span>(+91)012-345-6789</span>
                            </div>

                            <div class="email_content info">
                                <i aria-hidden="true" class="fa fa-envelope"></i><span><a href="mailto:cafebrew@exampledemo.com" target="_Self">cafebrew@exampledemo.com</a></span>
                            </div>

                            <div class="time-info info">
                                <i aria-hidden="true" class="fa fa-info"></i><span>Monday – Friday 10 AM – 8 PM</span>
                            </div>
                        </div>
                    </div>
                    <div class="map">
                        <span><iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d12617.689403277553!2d-122.46322093501155!3d37.75669390222364!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x80859a6d00690021%3A0x4a501367f076adff!2sSan%20Francisco%2C%20CA!5e0!3m2!1sen!2sus!4v1643092942713!5m2!1sen!2sus" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe></span>
                    </div>
                </div>
            </section>
        </div>
    </div>
</main>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}