@model IEnumerable<OrderItem>

@{
    ViewData["Title"] = "Order Detail";
}

<partial name="_BreadcrumbsPartial" />
<main class="main-content" id="MainContent" role="main" tabindex="-1">
    <div class="page-width contents">
        <div class="main-container medium-up--three-quarters without-sidebar-main-container">
            <div id="shopify-section-template--16631469113637__cart-items" class="shopify-section">
                <link href="//cafebrew-codezeel.myshopify.com/cdn/shop/t/2/assets/component-cart.css?v=15833182760065213841666256837" rel="stylesheet" type="text/css" media="all">
                <link href="//cafebrew-codezeel.myshopify.com/cdn/shop/t/2/assets/component-cart-items.css?v=146865210184035672081666256837" rel="stylesheet" type="text/css" media="all">
                <link href="//cafebrew-codezeel.myshopify.com/cdn/shop/t/2/assets/component-totals.css?v=68328453586418871801666256838" rel="stylesheet" type="text/css" media="all">
                <link href="//cafebrew-codezeel.myshopify.com/cdn/shop/t/2/assets/component-price.css?v=36297916317652221621666265776" rel="stylesheet" type="text/css" media="all">
                <link href="//cafebrew-codezeel.myshopify.com/cdn/shop/t/2/assets/component-discounts.css?v=178181572341393928631666256837" rel="stylesheet" type="text/css" media="all">
                <link href="//cafebrew-codezeel.myshopify.com/cdn/shop/t/2/assets/component-loading-overlay.css?v=135534932159979988391666256837" rel="stylesheet" type="text/css" media="all">
                <cart-items class="page-width">
                    <form onsubmit="return false;" class="cart__contents critical-hidden" id="cart">
                        <div class="cart__items" id="main-cart-items" data-id="template--16631469113637__cart-items">
                            <div class="js-contents">
                                <table class="cart-items">
                                    <thead>
                                        <tr>
                                            <th class="caption-with-letter-spacing" colspan="2" scope="col">Product</th>
                                            <th class="right caption-with-letter-spacing" colspan="1" scope="col">Price</th>
                                            <th class="cart-items__heading--wide medium-up caption-with-letter-spacing" colspan="1" scope="col">Quantity</th>
                                            <th class="medium-up right caption-with-letter-spacing" colspan="1" scope="col">Total</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @{
                                            double subtotal = 0;
                                        }
                                        @foreach (var item in Model)
                                        {
                                            subtotal += (item.Price * item.Quantity);
                                            <tr class="cart-item" id="CartItem-1">
                                                <td class="cart-item__media">
                                                    <img class="cart-item__image" src="@item.Coffee.Image" alt="Countrybean Refresh Coffee" loading="lazy" width="75" height="80">
                                                </td>
                                                <td class="cart-item__details">
                                                    <a href="/products/copy-of-dapibus-in-viverra-2" class="cart-item__name break">Countrybean Refresh Coffee</a><dl></dl>
                                                    <p class="cart-item__error" id="Line-item-error-1">
                                                        <span class="cart-item__error-text"></span>
                                                        <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-error" viewBox="0 0 13 13">
                                                            <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"></circle>
                                                            <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"></circle>
                                                            <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"></path>
                                                            <path d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z" fill="white" stroke="#EB001B" stroke-width="0.7">
                                                            </path>
                                                        </svg>
                                                    </p>
                                                </td>
                                                <td class="cart-item__prices right">
                                                    <div class="cart-item__price-wrapper">
                                                        <span class="price price--end">
                                                            $@item.Price
                                                        </span>
                                                    </div>
                                                </td>
                                                <td class="cart-item__quantity">
                                                    <label class="medium-down" for="Quantity-1">
                                                        Quantity
                                                    </label>
                                                    <input type="hidden" name="cartItemId" value="@item.Id" />
                                                    <quantity-input class="quantity" style="width: auto;">
                                                        <input class="quantity__input" type="number" name="quantities" style="width: 50px;"
                                                               value="@item.Quantity" min="0" aria-label="Quantity for Countrybean Refresh Coffee" readonly>
                                                    </quantity-input>
                                                </td>
                                                <td class="cart-item__totals right">
                                                    <div class="loading-overlay hidden">
                                                        <div class="loading-overlay__spinner">
                                                            <svg aria-hidden="true" focusable="false" role="presentation" class="spinner" viewBox="0 0 66 66" xmlns="http://www.w3.org/2000/svg">
                                                                <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
                                                            </svg>
                                                        </div>
                                                    </div>
                                                    <div class="cart-item__price-wrapper medium-up">
                                                        <span class="price price--end">
                                                            $@(item.Price * item.Quantity)
                                                        </span>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="cart__footer">
                            <div>
                                <div class="js-contents">
                                    <div class="totals">
                                        <h3 class="totals__subtotal">Total</h3>
                                        <p class="totals__subtotal-value">$@subtotal</p>
                                    </div>
                                </div>
                                <div id="cart-errors"></div>
                            </div>
                        </div>
                    </form>
                </cart-items>
            </div>
        </div>
    </div>
</main>